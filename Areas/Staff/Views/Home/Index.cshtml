@{
    ViewData["Title"] = "Treehugger's Staff Page";
}



<style>
    #card {
        background-color: white;
    }

    .panel-body .btn:not(.btn-block) {
        width: 200px;
        margin-bottom: 20px;
        margin-top: 15px;
    }

    .panel {
        align-content: center;
        margin-top: 50px;
        margin-bottom: 200px;
    }
</style>



<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-home"></span> Staff Menu
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                            <a class="btn btn-primary btn-lg" role="button"
                               asp-area="DataTables" asp-controller="Reports" asp-action="Index">
                                <span class="glyphicon glyphicon-folder-open"></span> <br />View Reports
                            </a>
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <a class="btn btn-success btn-lg" role="button"
                               asp-area="DataTables" asp-controller="Tables" asp-action="Tables">
                                <span class="glyphicon glyphicon-user"></span> <br />Data Tables
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>