@model User

@{
    ViewData["Title"] = "Add/Edit User";
    Layout = "_MemberLayout";
}

@*Current user's account editing view*@

<style>
    h1 {
        text-align: center;
        color: black;
    }

    #card {
        background-color: white;
    }
</style>


<div class="col-sm-9">
    <div class="row">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All"
                 class="text-danger">
            </div>


            <div class="col-sm-6">
                <ul class="w3-ul w3-border">
                    <li><h2>User Information</h2></li>
                    <li>
                        <div class="form-group">
                            <label asp-for="FirstName">Firstname</label>
                            <input asp-for="FirstName" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="LastName">Lastname</label>
                            <input asp-for="LastName" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Phone">Phone Number</label>
                            <input asp-for="Phone" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="ContactPrefrence">Contact Preference</label>
                            <select class="form-control" asp-for="ContactPrefrence">
                                <option value="1">Email</option>
                                <option value="2">Phone</option>
                                <option value="3">Mail</option>
                                <option value="4">In Person</option>
                            </select>
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Monthly_Dues">Monthly Dues</label>
                            <input asp-for="Monthly_Dues" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Comments">Comments</label>
                            <textarea class="form-control" asp-for="Comments" rows="3"></textarea>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-sm-6">
                <ul class="w3-ul w3-border">
                    <li><h2>Address Information</h2></li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Street_Address1">Street Address</label>
                            <input asp-for="Street_Address1" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Street_Address2">Address Line 2</label>
                            <input asp-for="Street_Address2" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="City">City</label>
                            <input asp-for="City" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="State">State</label>
                            <input asp-for="State" class="form-control">
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label asp-for="Zip">Zipcode</label>
                            <input asp-for="Zip" class="form-control">
                        </div>
                    </li>

                </ul>
            </div>

            <input type="hidden" asp-for="Date_Joined" />

            <input type="hidden" asp-for="SolicitedBy" />
            <input type="hidden" asp-for="UserType" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="Password" />
            <input type="hidden" asp-for="username_email" />



            <input type="hidden" asp-for="UserID" />

            <div class="row w3-padding-24">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
                <a asp-area="Member" asp-controller="Home" asp-action="Index"
                   class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>




